<div class="auth-container">
    <h2>Editar Registro Veterinário:</h2>
    <div class="row">
        <h3>{{resumePet.PetName}} </h3>
        <h3>{{formatDate resumeVeterinaryRecord.date}}</h3>
    </div>
    <form action="/editVeterinaryRecord" method="POST">
        <input type="hidden" name="id" value="{{id}}">
        <div class="form-control">
            <label for="weight">Peso:</label>
            <input type="text" name="weight" value="{{resumeVeterinaryRecord.Weight}}" required>
        </div>
        <div class="form-control">
            <label for="report">Laudo:</label>
            <textarea type="text" name="report" rows="5" required> {{resumeVeterinaryRecord.report}} </textarea>
        </div>
        <div class="form-control">
            <label for="revenue">Receita:</label>
            <textarea type="text" name="revenue" rows="5" required>{{resumeVeterinaryRecord.revenue}}</textarea>
        </div>

        <div class="vaccine">
            <label for="vaccine">Vacina:</label>
            <input type="checkbox" name="vaccine" id="vaccineCheckbox">
        </div>

        <div class="form-control" id="nextAppointmentSection" style="display: none;">
            <label for="nextAppointment">Próxima vacina:</label>
            <div class="nextAppointment">
                <select name="day" required>
                    {{#each days}}
                    <option value="{{this}}">{{this}}</option>
                    {{/each}}
                </select>
                <select name="month" required>
                    {{#each months}}
                    <option value="{{@index}}">{{this}}</option>
                    {{/each}}
                </select>
                <select name="year" required>
                    {{#each years}}
                    <option value="{{this}}">{{this}}</option>
                    {{/each}}
                </select>
            </div>
        </div>
        <div class="buttons">
            <input type="submit" value="Editar">
            <a href="/downloadRecipe/{{id}}" class="download">Download</a>
        </div>
    </form>
</div>


<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script>
    $(document).ready(function () {
        $('#vaccineCheckbox').change(function () {
            if ($(this).is(':checked')) {
                $('#nextAppointmentSection').show();
            } else {
                $('#nextAppointmentSection').hide();
            }
        });
    });
</script>