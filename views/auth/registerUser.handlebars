<div class="auth-container">
    <h2>Registrar</h2>
    <form action="/registerUser" method="POST">
        <div class="form-control">
            <label for="name">Nome e Sobrenome:</label>
            <input type="name" name="name"  id="nameInput" placeholder="Digite o seu nome e sobrenome..." required>
        </div>
        <div class="form-control">
            <label for="telephone">WhatsApp:</label>
            <input type="tel" name="telephone" pattern="[0-9]{11,}"
                placeholder="Digite o telefone com o ddd sem espaço Ex:32932811080... " required>
        </div>
        <div class="form-control">
            <label for="telephone">Confirme o WhatsApp:</label>
            <input type="tel" name="confirmTelephone" pattern="[0-9]{11,}" placeholder="Confirme o telefone..." required>
        </div>
        <input type="submit" value="Cadastrar">
        <p>Já tem conta? <a href="/loginUser">Clique aqui</a></p>
    </form>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const nameInput = document.getElementById('nameInput');

    nameInput.addEventListener('input', function () {
      const words = this.value.split(' ');
      const capitalizedWords = words.map(word => {
        if (word.length > 0) {
          return word.charAt(0).toUpperCase() + word.slice(1).toLowerCase();
        }
        return '';
      });

      this.value = capitalizedWords.join(' ');
    });
  });
</script>
