<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Agro Pet Vet Reis</title>
    <link rel="stylesheet" href="/Css/styles.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>

<body>
    <nav id="navbar">
        <a href="/loginAdm" class="imgLayout" id="logo">
            <img src="/img/vecteezy_happy-dog-an-illustration-of-a-cute-dog-playing-with-his_9551670.png" alt="Logo">
        </a>
        <div class="menu-toggle" id="mobile-menu">
            <span class="bar"></span>
            <span class="bar"></span>
            <span class="bar"></span>
        </div>
        <ul class="ulLayout">
            {{#isLess session.userid 50}}
            <li class="liLayout"><a href="/calendar">Gerenciador</a></li>
            <li class="liLayout"><a href="/allChips">Pacientes</a></li>
            <li class="liLayout"><a href="/queries">Consultas</a></li>
            <li class="liLayout"><a href="/logout">Sair</a></li>
            {{else}}
            {{#if session.userid}}
            <li class="liLayout"><a href="/calendar">Calendario</a></li>
            <li class="liLayout"><a href="/pets">Pets</a></li>
            <li class="liLayout"><a href="/logout">Sair</a></li>
            {{else}}
            <li class="liLayout"><a href="/calendar">Calendario</a></li>            
            <li class="liLayout"><a href="/loginUser">Entrar</a></li>
            <li class="liLayout"><a href="/registerUser">Registrar</a></li>
            {{/if}}
            {{/isLess}}
        </ul>
    </nav>
    <div class="container">
        {{#if messages.message}}
        <div class="message">
            {{messages.message}}
        </div>
        {{/if}}
        {{#if message}}
        <div class="message">
            {{message}}
        </div>
        {{/if}}
        {{{ body }}}
    </div>
    <footer>
        <img src="/img/vecteezy_happy-dog-an-illustration-of-a-cute-dog-playing-with-his_9551670.png" alt="Logo">
        <p><span>AgroPet Reis</span> &copy; 2023</p>
    </footer>
</body>

</html>

<script>
    document.addEventListener('DOMContentLoaded', function () {
    const mobileMenu = document.getElementById('mobile-menu');
    const navList = document.querySelector('#navbar ul');

    mobileMenu.addEventListener('click', function () {
        navList.classList.toggle('show');
    });
});

</script>