<div class="auth-container">
    <h2>Registrar Pet: </h2>
    <form action="/registerPet" method="POST">
        <div class="form-control">
            <label for="PetName">Nome do Pet:</label>
            <input type="name" name="PetName" id="nameInput" placeholder="Digite o nome do seu pet..." required>
        </div>
        <div class="form-control">
            <label for="species">Especie:</label>
            <input type="name" name="species" id="nameInput2" placeholder="Digite a especie do seu animal... Ex: cachorro " required>
        </div>
        <div class="form-control">
            <label for="race">Raça:</label>
            <input type="name" name="race" id="nameInput3" placeholder="Digite a raça do seu animal... Ex: Pastor Alemão " required>
        </div>
        <input type="submit" value="Cadastrar">
        <p>Seu pet ja esta cadastrado ? <a href="/pets">Clique aqui</a></p>
    </form>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const nameInput = document.getElementById('nameInput');
    const nameInput2 = document.getElementById('nameInput2');
    const nameInput3 = document.getElementById('nameInput3');

    const applyFormatting = input => {
      const words = input.value.split(' ');
      const capitalizedWords = words.map(word => {
        if (word.length > 0) {
          return word.charAt(0).toUpperCase() + word.slice(1).toLowerCase();
        }
        return '';
      });

      input.value = capitalizedWords.join(' ');
    };

    nameInput.addEventListener('input', function () {
      applyFormatting(this);
    });

    nameInput2.addEventListener('input', function () {
      applyFormatting(this);
    });

    nameInput3.addEventListener('input', function () {
      applyFormatting(this);
    });
  });
</script>
